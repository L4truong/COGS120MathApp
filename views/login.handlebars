<!doctype html>

<html>
<head>
  <title>Login</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" type="text/css" href="css/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
  <link rel="stylesheet" type="text/css" href="css/index.css">

  <script src="js/jquery-1.11.0.js"></script>
  <script src="js/bootstrap.js"></script>

  {{> facebook}}
  <script src="/js/facebook.js"></script>

  <script> 
    window.onload = function(){ 
      document.getElementById("studentLoginButton").onclick = function studentClick() { console.log("Student button clicked!"); window.location.replace('home'); }
      /*document.getElementById("teacherLoginButton").onclick = function studentClick() { console.log("Teacher button licked!"); window.location.replace('home'); } */
      document.getElementById("signupButton").onclick = function studentClick(req, res) { console.log("Sign up button clicked!"); window.location.replace("signup"); }
      document.getElementById("facebookButton").onclick = function studentClick(req, res) { console.log("Facebook button clicked!"); window.location.replace('home'); }
    }; 
  </script>
</head>

<body> <!--
  <div id="header" style="text-align: center;">
      <p id="logo" style="margin-top: 100px;">MathPal</p>
    </div> -->

  <div class="container">
    <div class="center">
      <h1>Log in</h1>
      <hr/>
      <div class="form-group">
        <input type="text" class="form-control" id="username" placeholder="Username" name="username">
      </div>

      <div class="form-group">
        <input type="password" class="form-control" id="password" placeholder="Password" name="password">
      </div>

      <div>
        <input type="btn btn-default" id="studentLoginButton" class="btn btn-default" value="Log in as Student">
      </div>
<!--
      <div>
        <input type="btn btn-default" id="teacherLoginButton" class="btn btn-default" value="Log in as Teacher"> 
      </div> -->

      <div>
        <input type="btn btn-default" id="signupButton" class="btn btn-default" value="Sign up">
      </div>

      <div>
        <fb:login-button id="facebookButton" scope="public_profile,email" onlogin="checkLoginState(); window.location.replace('home');">
        </fb:login-button>
      </div>
    </div>
  </div>
</body>
</html>